{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@env": ["src/environments/environment.ts"],
            "@app/core/*": ["src/app/core/*"],
            "@app/layout/*": ["src/app/layout/*"],
            "@app/shared/*": ["src/app/shared/*"]
        }
    }
}
